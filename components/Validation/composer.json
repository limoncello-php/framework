{
    "name": "limoncello-php/validation",
    "description": "Limoncello framework validation support",
    "keywords": ["limoncello", "framework", "validation"],
    "homepage": "https://github.com/limoncello-php/framework/tree/master/components/Validation",
    "support": {
        "issues": "https://github.com/limoncello-php/framework/issues"
    },
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "neomerx",
            "email": "info@neomerx.com"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "ext-intl" : "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.5",
        "phpmd/phpmd": "^2.4",
        "scrutinizer/ocular": "^1.3",
        "phpunit/phpunit": "^4.0 || ^5.0",
        "mockery/mockery": "^0.9.4"
    },
    "autoload": {
        "psr-4": {
            "Limoncello\\Validation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Limoncello\\Tests\\Validation\\": "tests/",
            "Sample\\": "sample/"
        }
    },
    "scripts": {
        "test": ["@test-unit", "@test-cs", "@test-md"],

        "test-unit": "./vendor/bin/phpunit --coverage-text",
        "test-cs": "./vendor/bin/phpcs -p -s --standard=PSR2 ./src ./tests",
        "test-md": "./vendor/bin/phpmd ./src text codesize,controversial,cleancode,design,unusedcode,naming",
        "test-lite": "./vendor/bin/phpunit",

        "test-php-7-0": "docker-compose run --rm cli_7_0_php php ./vendor/bin/phpunit",
        "test-php-5-6": "docker-compose run --rm cli_5_6_php php ./vendor/bin/phpunit",
        "test-hhvm": "docker-compose run --rm cli_hhvm php ./vendor/bin/phpunit"
    }
}

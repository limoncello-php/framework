{
    "name": "limoncello-php/commands",
    "type": "composer-plugin",
    "description": "Limoncello application commands support",
    "keywords": ["limoncello", "framework", "composer", "composer"],
    "homepage": "https://github.com/limoncello-php/framework/tree/master/components/Commands",
    "support": {
        "issues": "https://github.com/limoncello-php/framework/issues"
    },
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "neomerx",
            "email": "info@neomerx.com"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "composer-plugin-api": "^1.1",
        "limoncello-php/contracts": "dev-develop",
        "limoncello-php/application": "dev-develop",

        "limoncello-php/core": "dev-develop",
        "limoncello-php/container": "dev-develop",
        "limoncello-php/crypt": "dev-develop",
        "limoncello-php/templates": "dev-develop"
    },
    "require-dev": {
        "composer/composer": "^1.0.0",
        "squizlabs/php_codesniffer": "^2.5",
        "phpmd/phpmd": "^2.4",
        "scrutinizer/ocular": "^1.3",
        "phpunit/phpunit": "^5.0",
        "mockery/mockery": "^0.9.4"
    },
    "autoload": {
        "psr-4": {
            "Limoncello\\Commands\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Limoncello\\Tests\\Commands\\": "tests/"
        }
    },
    "scripts": {
        "test": ["@test-unit-with-coverage", "@test-cs", "@test-md"],
        "test-unit": "./vendor/bin/phpunit",
        "test-unit-with-coverage": "phpdbg -qrr ./vendor/bin/phpunit --coverage-text",
        "test-cs": "./vendor/bin/phpcs -p -s --standard=PSR2 ./src ./tests",
        "test-md": "./vendor/bin/phpmd ./src text codesize,controversial,cleancode,design,unusedcode,naming",
        "test-unit-php-7-1": "docker-compose run --rm cli_7_1_php php ./vendor/bin/phpunit",
        "test-unit-php-7-0": "docker-compose run --rm cli_7_0_php php ./vendor/bin/phpunit",
        "test-unit-hhvm":    "docker-compose run --rm cli_hhvm php    ./vendor/bin/phpunit"
    },
    "config": {
        "optimize-autoloader": true
    },
    "extra": {
        "class": "Limoncello\\Commands\\ComposerPlugin",
        "branch-alias": {
            "dev-master": "0.5.x-dev",
            "dev-develop": "0.6.x-dev"
        }
    }
}

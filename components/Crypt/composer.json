{
    "name": "limoncello-php/crypt",
    "description": "Limoncello framework crypt support.",
    "keywords": ["limoncello", "framework", "crypt"],
    "homepage": "https://github.com/limoncello-php/framework/tree/master/components/Crypt",
    "support": {
        "issues": "https://github.com/limoncello-php/framework/issues"
    },
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "neomerx",
            "email": "info@neomerx.com"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "limoncello-php/contracts": "^0.6.9"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.5",
        "phpmd/phpmd": "^2.4",
        "scrutinizer/ocular": "^1.3",
        "phpunit/phpunit": "^6.1",
        "mockery/mockery": "^0.9.4"
    },
    "autoload": {
        "psr-4": {
            "Limoncello\\Crypt\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Limoncello\\Tests\\Crypt\\": "tests/"
        }
    },
    "scripts": {
        "test": ["@test-unit-with-coverage", "@test-cs", "@test-md"],
        "test-unit": "./vendor/bin/phpunit",
        "test-unit-with-coverage": "phpdbg -qrr ./vendor/bin/phpunit --coverage-text",
        "test-cs": "./vendor/bin/phpcs -p -s --standard=PSR2 ./src ./tests",
        "test-md": "./vendor/bin/phpmd ./src text codesize,controversial,cleancode,design,unusedcode,naming",
        "test-unit-php-7-1": "docker-compose run --rm cli_7_1_php php ./vendor/bin/phpunit",
        "test-unit-php-7-0": "docker-compose run --rm cli_7_0_php php ./vendor/bin/phpunit",
        "test-unit-hhvm":    "docker-compose run --rm cli_hhvm php -d hhvm.php7.all=1 ./vendor/bin/phpunit"
    }
}

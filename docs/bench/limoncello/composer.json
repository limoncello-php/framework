{
    "name": "limoncello-php/app",
    "homepage": "https://github.com/limoncello-php/app",
    "support": {
        "issues": "https://github.com/limoncello-php/app/issues"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "neomerx",
            "email": "info@neomerx.com"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "vlucas/phpdotenv": "^2.3",
        "limoncello-php/framework": "^0.6.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Settings\\": "settings/",
            "Cached\\": "storage/cache/settings/"
        }
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "build": ["@composer install --no-dev --quiet", "@composer l:cache", "@composer dumpautoload --optimize --quiet"]
    }
}

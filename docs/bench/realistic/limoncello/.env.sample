APP_NAME        = 'Limoncello'
APP_ENABLE_LOGS = 1
APP_IS_DEBUG    = 1

APP_ORIGIN_SCHEME = 'http'
APP_ORIGIN_HOST   = 'localhost'
APP_ORIGIN_PORT   = 8080

# It recommended to turn on this option and develop with HTTPS enabled,
# however you might need set up HTTPS first.
#
# A good read on how to set up HTTPS in local development environment
# https://deliciousbrains.com/ssl-certificate-authority-for-local-https-development/
APP_AUTH_COOKIE_ONLY_OVER_HTTPS = 0

# Sample configuration for Doctrine (SQLite)
DB_DATABASE_NAME = ''
DB_USER_NAME     = 'root'
DB_USER_PASSWORD = ''
DB_HOST          = ''
DB_PORT          = ''
DB_CHARSET       = 'UTF8'
DB_DRIVER        = 'pdo_sqlite'
DB_FILE          = 'local.sqlite'

